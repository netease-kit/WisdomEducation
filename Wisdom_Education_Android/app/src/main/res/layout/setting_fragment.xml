<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.main.SettingFragment">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/common_dp_32"
            android:layout_height="@dimen/common_dp_32"
            android:layout_marginStart="@dimen/common_dp_11"
            android:layout_marginTop="@dimen/common_dp_30"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dp_10"
            android:layout_marginTop="@dimen/common_dp_30"
            android:layout_marginBottom="@dimen/common_dp_10"
            android:text="IM登录"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tv_back"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/firstEditor"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:hint="IM账号"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <EditText
            android:id="@+id/secondEditor"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:hint="IM密码"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstEditor"
            tools:text="1234567" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toggleIMReuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="当前IM复用状态(修改后重启生效)："
            android:textOff="已关闭"
            android:textOn="已开启"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondEditor" />

        <TextView
            android:id="@+id/imLoginState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="当前已登录IM账号:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toggleIMReuse" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="登录"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imLoginState" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="注销"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>